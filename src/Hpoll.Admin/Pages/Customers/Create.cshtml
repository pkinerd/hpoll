@page
@model Hpoll.Admin.Pages.Customers.CreateModel
@{
    ViewData["Title"] = "Add Customer";
}

<h1>Add Customer</h1>

<div class="card" style="max-width: 500px;">
    <form method="post">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" />
            <span asp-validation-for="Name" style="color: #dc2626; font-size: 0.85rem;"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Notification Email Addresses</label>
            <input asp-for="Email" placeholder="email1@example.com, email2@example.com" />
            <span style="font-size: 0.8rem; color: #666;">Comma-separated list of notification recipients</span>
            <span asp-validation-for="Email" style="color: #dc2626; font-size: 0.85rem;"></span>
        </div>
        <div class="form-group">
            <label asp-for="TimeZoneId">Timezone</label>
            <select asp-for="TimeZoneId">
                @foreach (var tz in TimeZoneInfo.GetSystemTimeZones().OrderBy(t => t.BaseUtcOffset))
                {
                    <option value="@tz.Id">@tz.DisplayName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="SendTimesLocal">Email Send Times (local time)</label>
            <input asp-for="SendTimesLocal" placeholder="19:30" />
            <span style="font-size: 0.8rem; color: #666;">Comma-separated times in HH:mm format (e.g., 07:00, 19:30)</span>
            <span asp-validation-for="SendTimesLocal" style="color: #dc2626; font-size: 0.85rem;"></span>
        </div>
        <div class="actions">
            <button type="submit" class="btn btn-primary">Create Customer</button>
            <a asp-page="Index" class="btn">Cancel</a>
        </div>
    </form>
</div>
